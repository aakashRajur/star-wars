CONTAINER_PORT=8000
DEBUG=false

DATABASE_SERVICE=wiki-db
CACHE_SERVICE=wiki-cache
KAFKA_SERVICE=kafka

CONSUL_SCHEME=http
CONSUL_ADDRESS=star-wars_consul_1:8500
CONSUL_HEALTHCHECK_INTERVAL=1m

PG_POOL_LIMIT=2

HTTP_PORT=8000
HTTP_READ_TIMEOUT=5
HTTP_WRITE_TIMEOUT=10
HTTP_IDLE_TIMEOUT=15

KAFKA_MAX_PARTITIONS=3
KAFKA_MAX_REPLICAS=3

# trace|debug|info|warning|fatal|fatal|panic
LOG_LEVEL=trace
# text|json
LOG_FORMATTER=text

# DOCKER ENVS
MAIN=cmd/wiki.kafka/wiki.kafka.go
DEBUG_PORT=2345