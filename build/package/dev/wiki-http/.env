CONTAINER_PORT=8000
DEBUG=false

SERVICE_ADDRESS=${CONTAINER_HOST_NAME}:${CONTAINER_PORT}
DATABASE_SERVICE=wiki-db
CACHE_SERVICE=wiki-cache

CONSUL_SCHEME=http
CONSUL_ADDRESS=star-wars_consul_1:8500
CONSUL_HEALTHCHECK_INTERVAL=1m

PG_POOL_LIMIT=2

HTTP_PORT=8000
HTTP_READ_TIMEOUT=5
HTTP_WRITE_TIMEOUT=10
HTTP_IDLE_TIMEOUT=15

# trace|debug|info|warning|fatal|fatal|panic
LOG_LEVEL=trace
# text|json
LOG_FORMATTER=text

ACCESS_URI_PREFIX=/http

# DOCKER ENVS
MAIN=cmd/wiki.http.go
DEBUG_PORT=2345